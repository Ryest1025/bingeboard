# Development Environment Variables
NODE_ENV=development

# HTTPS Configuration for Facebook Login
HTTPS=false

# Database (Using SQLite for local development)
DATABASE_URL=sqlite:./dev.db

# Firebase Configuration (You'll need to add your own Firebase config)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Session Secret (generate a random string for development)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# API Configuration
VITE_API_URL=http://192.168.7.122:3000
HOST=0.0.0.0
PORT=3000

# TMDB API (for movie/TV data)
TMDB_API_KEY=your_tmdb_api_key_here

# SendGrid (for email)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Stripe (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Development Settings
REPL_ID=local-development
REPL_SLUG=bingeboard-local
