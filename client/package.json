{
  "name": "bingeboard-client",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build && npm run fix-https",
    "build-only": "vite build",
    "fix-https": "find dist -type f \\( -name '*.js' -o -name '*.css' -o -name '*.html' \\) -exec sed -i 's|http://|https://|g' {} + 2>/dev/null || true",
    "check-https": "grep -r 'http://' dist/ || echo 'No HTTP references found - all good!'",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^6.0.1"
  }
}