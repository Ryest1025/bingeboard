{
  "name": "bingeboard-client",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build && npm run fix-https",
    "build-only": "vite build",
    "fix-https": "find dist -type f \\( -name '*.js' -o -name '*.css' -o -name '*.html' \\) -exec sed -i 's|http://|https://|g' {} + 2>/dev/null || true",
    "check-https": "grep -r 'http://' dist/ || echo 'No HTTP references found - all good!'",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "msw": "^2.12.2",
    "ts-jest": "^29.4.5",
    "vite": "^6.0.1",
    "whatwg-fetch": "^3.6.20"
  }
}
