# Core Environment Variables
NODE_ENV=development
PORT=5000

# TMDB API Configuration (Required for movies/TV data)
TMDB_API_KEY=your_tmdb_api_key_here

# Firebase Configuration (Required for authentication)
FIREBASE_ADMIN_KEY=your_firebase_admin_service_account_json_here

# Database Configuration
DATABASE_URL=./database.db

# Session Configuration
SESSION_SECRET=your_session_secret_here

# External API Keys (Optional)
WATCHMODE_API_KEY=your_watchmode_api_key_here
SPORTS_API_KEY=your_sports_api_key_here

# Debug Settings
DEBUG=false
LOG_LEVEL=info

# OpenAI (for AI recommendations)
OPENAI_API_KEY=your_openai_api_key_here
# Optional: override model (defaults to gpt-4o)
# OPENAI_MODEL=gpt-4.1-mini
